<!DOCTYPE html>
<html>
	<head>
  		<title><%= yield(:title) %> | Realisis</title>
  		<%= stylesheet_link_tag    "application/application", media: "all", "data-turbolinks-track" => true %>
  		<%= javascript_include_tag "application", "data-turbolinks-track" => true %>
  		<%= javascript_include_tag "cp" %>
  		<%= render 'shared/shim' %>
  		<%= csrf_meta_tags %>
	</head>
	<body>
		<%= render 'shared/header' %>
		<%= render 'shared/aside' %>
		<div id="main">
			<div class="buffer">
				<%= yield(:pagetitle) %>
			</div>
			<%= render 'shared/flash' %>
    		<%= yield %>
    	</div>
	</body>
</html>
