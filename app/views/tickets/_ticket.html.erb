<li>
  <span class="title"><%= ticket.title %></span><br>
  <% unless ticket.open? %>
  <span class="title"> Moderator's comment: <%= ticket.action_taken %> </span><br>
  <% end %>
  <span class="timestamp">
    Opened <%= time_ago_in_words(ticket.created_at) %> ago
  </span><br>
  <span class="timestamp">
    Last updated <%= time_ago_in_words(ticket.updated_at) %> ago
  </span><br>
</li>