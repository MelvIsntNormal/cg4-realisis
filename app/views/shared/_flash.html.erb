<!--If the flash hash isn't empty-->
<% if !flash.empty? %>
    <!--Declare a division for flash notifications-->
    <div id="flash">
      <!--For each element in flash hash-->
      <% flash.each do |key, value| %>
          <!--Declare division for the notification and output the notification-->
          <div class="alert-<%= key %>"><%= value %></div>
      <% end %>
    </div>
<% end %>