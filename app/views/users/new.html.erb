<!--Provide page information-->
<% provide(:title, "Register") %>
<% provide(:pagetitle, "Hello, new person!") %>

<!--Declare division for editing form-->
<div id="form">
  <!--Form helper for editing a user-->
  <%= form_for(@user) do |f| %>
      <!--Render error messages-->
      <%= render 'shared/error_messages' %>

      <!--Declare unordered list-->
      <ul>
        <!--List item-->
        <li>
          <!--Render text box and tooltip for username-->
          <%= f.text_field :name, required: true, placeholder: "Username", pattern: "[a-z0-9]+" %>
          <span class="tooltip">Can only contain lowercase letters and numbers</span>
        </li>
        <!--List item-->
        <li>
          <!--Render text box and tooltip for email address-->
          <%= f.text_field :email, required: true, placeholder: "Email", type: "email"%>
          <span class="tooltip">eg. jondoe@example.com</span>
        </li>
        <!--List Item-->
        <li>
          <!--Render text box and tooltip for password-->
          <%= f.password_field :password, required: true, placeholder: "Password" %>
          <span class="tooltip">Must be 8 characters or longer</span>
        </li>
        <!--List item-->
        <li>
          <!--Render text box and tooltip for confirming the password-->
          <%= f.password_field :password_confirmation, required:true, placeholder: "Confirm Password" %>
          <span class="tooltip">Must match the above password</span>
        </li>
        <!--List item-->
        <li>
          <!--Render submit button and tooltip for submitting registration-->
          <%= f.submit "Register!", class: "submit" %>
          <span class="tooltip"> By clicking on this button, you agree to the Terms and Conditions of this site (yet to be created)</span>
        </li>
      </ul>
  <% end %>
</div>
