<!--Declare the version of HTML used is HTML 5-->
<!DOCTYPE HTML>
<!--Declare HTML content-->
<html>
<head>
  <title>Play! | Realisis</title>
  <!--Include the Gon variables-->
  <%= include_gon %>
  <!--Get stylesheet for the game client using the Rails Assets Pipeline-->
  <%= stylesheet_link_tag    "game_client", media: "all", "data-turbolinks-track" => true %>
  <!--Get javascripts for the application client using the Rails Assets Pipeline-->
  <%= javascript_include_tag "application", "data-turbolinks-track" => true %>
  <!--Get javascripts for the game client using the Rails Assets Pipeline-->
  <%= javascript_include_tag "game_client" %>#
  <!--Render Internet Explorer compatibility script-->
  <%= render 'shared/shim' %>
  <!--Generated by Rails-->
  <%= csrf_meta_tags %>
</head>

<body>
<!--Declare section for chat messages-->
<section id="room">

</section>

<!--Declare section for inputting chat messages-->
<section id="chat-bar">
  <!--Form Helper for Chat messages-->
  <%= form_for(@chat_message, html: { id: "new_message" }) do |f| %>
      <!--Declare input textbox for message-->
      <input type="text" id="mymsg" maxlength=140 placeholder="Give us a second..." disabled>
      <!--Declare submit button-->
      <input type="submit" text="Send" id="btnSend">
  <% end %>
</section>
</body>
</html>
