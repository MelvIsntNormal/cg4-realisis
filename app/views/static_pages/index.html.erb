<!--Declare HTML version has HTML 5-->
<!DOCTYPE html>
<!--Declare main html element-->
<html>
<!--Declare the head of the document-->
<head>
  <!--Declare the title of the page-->
  <title>Under Construction | Realisis</title>
  <!--Import the CSS assets using the Rails Assets Pipeline-->
  <%= stylesheet_link_tag "front" %>
  <!--Import JavaScripts ising the Assets Pipeline-->
  <%= javascript_include_tag "application", "data-turbolinks-track" => true %>
  <!--Generated by Rails-->
  <%= csrf_meta_tags %>
</head>

<!--Declare the content of the page-->
<body>
<!--Declare central division-->
<div id="center-box">
  <!--Declare table to arrange elements-->
  <table style="width: 100%; height: 100%;">
    <!--Table Row-->
    <tr>
      <!--Table Column-->
      <th>
        <!--Declare division for login form-->
        <div id="login">
          <!--Form helper for logging into the site-->
          <%= form_for(:session, url: sessions_path) do |f| %>
              <!--Declare unordered list to arrange elements-->
              <ul>
                <!--List Item-->
                <li>
                  <!--Render text field for username-->
                  <%= f.text_field :name, placeholder: "Username" %>
                </li>
                <!--List Item-->
                <li>
                  <!--Render masked textbox for password-->
                  <%= f.password_field :password, placeholder: "Password" %>
                </li>
                <!--List Item-->
                <li>
                  <!--Render submit button-->
                  <%= f.submit "Sign in", class: "submit" %>
                </li>
              </ul>
          <% end %>
        </div>
      </th>
      <!--Table Column-->
      <th>
        <!--Declare division for short message-->
        <div id="welcome">
          <p id="title"><b>Welcome to Realisis (Still Under Construction)</b></p>
          This is the site of Realisis. Watch this space to become one of our BETA testers!
        </div>
      </th>
    </tr>
    <!--Table Row-->
    <tr>
      <!--Render Flash messages-->
      <%= render 'shared/flash' %>
    </tr>
  </table>
</div>
</body>
</html>
